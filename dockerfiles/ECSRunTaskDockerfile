# Use Python 3.11 slim base image
FROM python:3.12-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

# Define the function/app directory
ARG FUNCTION_DIR="/app"

# Install system dependencies
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
       build-essential \
       libpq-dev \
       telnet \
       netcat-openbsd \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first to leverage Docker cache
COPY requirements.txt /tmp/requirements.txt

# Install Python dependencies into the application directory
RUN pip install --no-cache-dir -r /tmp/requirements.txt --target ${FUNCTION_DIR}

# Set the working directory
WORKDIR /app

# Copy application code
COPY . /app

# Default command (change if needed)
CMD ["python3", "tasks.py"]
